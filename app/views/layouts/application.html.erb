            <path d='M141.778,84.851c-1.374,-2.381 -4.423,-3.198 -6.804,-1.823c-2.38,1.374 -3.197,4.423 -1.823,6.804l36.046,62.432c1.374,2.381 4.423,3.198 6.804,1.823c2.38,-1.374 3.197,-4.423 1.823,-6.803l-36.046,-62.433Z' />
